<% content_for(:title) { "#{@category.present? ? @category.name : t(:uncategorized)}" } %>

<% content_for(:blog_content) do %>
  <ul class="breadcrumb">
    <li><%= link_to @user.username, @user %>
    <li class="active"><%= @category.present? ? @category.name : t(:uncategorized) %>
  </ul>

  <%= render @slides %>
  <div class="panel entry">
    <% # entry_name is for not found %>
    <%= page_entries_info(@slides, entry_name: Slide.model_name.human) %>
    <%= paginate @slides, param_name: :p %>
  </div>
<% end %>

